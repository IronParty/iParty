<div class="container-fluid">
<h2>Signup</h2>

<form action="/signup" method="POST" id="form-container">
    <label for="username">Username</label>
    <input id="username" type="text" name="username" placeholder="Your Username">
    <br><br>
    <label for="password">Password</label>
    <input id="password" type="password" name="password" placeholder="Your password">
    <label for="password">Confirm Password</label>
    <input id="password" type="password" name="password2" placeholder="Confirm password">

    <% if (typeof message !== "undefined") { %>
    <div class="error-message"><%= message %></div>
    <% } %>
    <br><br>

    <button>Create account</button>

</form>
<p>Or Sign up in with</p>
<button type="button" class="btn btn-fb"><i class="fa fa-facebook pr-1"></i> Facebook</button>
<button type="button" class="btn btn-gplus"><i class="fa fa-google-plus pr-1"></i> Google +</button>

<p class="account-message">
    Do you already have an account?
    <a href="/login">Login</a>
</p>
</div>