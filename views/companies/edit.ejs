<div class="cont">
<section class="form-company-update">
    <h2>Edit Your Company</h2>
    <form method="POST" action="/company/edit/<%=company._id%>" id="edit-company-form" class="company-form">
      <div class="field">
        <label for="title">Title: </label>
        <input type="text" name="title" value="<%=company.title%>">
      </div>
      <div class="field">
        <label for="email">Email: </label>
        <input type="text" name="email" value="<%=company.email%>">
      </div>
      <div class="field">
        <label for="description">Description: </label>
        <input type="text" name="description" 
        value="<%=company.description%>">
      </div>
      <div class="field">
        <label for="price">Price: </label>
        <input type="text" name="price" value="<%=company.price%>">
      </div>
      <div class="field">
        <label for="calendar">Calendar link: </label>
        <input type="text" name="calendar" value="<%=company.schedule%>">
      </div>

      <h2>Upload your photo</h2>
      <br>
        <input type="file" name="photo" accept="image/*">
      <button id="edit-submit" class="submit-button">Update</button>
    </form>
  </section>
</section>
</div>